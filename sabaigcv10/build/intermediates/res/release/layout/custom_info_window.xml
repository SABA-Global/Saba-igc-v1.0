<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_green_dark"
    android:padding="4dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/ivInfoWindowSaba"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher"
        android:visibility="visible"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivInfoWindowSaba"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/tvInfoWindowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SABA Islamic Center"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvInfoWindowAddress"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="4dp"
            android:text="@string/saba_address_1"
            android:textColor="#fff"
            android:maxLines="1"
            android:textSize="12sp"
            android:linksClickable="true" />

        <TextView
            android:id="@+id/tvInfoWindowAddress2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="4dp"
            android:text="@string/saba_address_2"
            android:textColor="#fff"
            android:maxLines="1"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout><!-- From: file:/Users/snaqvi/Github/Saba-igc-v1.0/sabaigcv10/src/main/res/layout/custom_info_window.xml -->