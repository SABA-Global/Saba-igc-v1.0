<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/ivProgram"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_launcher" />

    <!-- <com.saba.igc.org.extras.EllipsizingTextView
    android:linksClickable="true"
    currently, we don't need this class but might need in future.-->
    <TextView
        android:id="@+id/tvProgramDescription"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="@string/program_description"
        android:layout_margin="12dp"
        android:paddingBottom="12dp"
        android:linksClickable="true"
        android:textIsSelectable="true"
        android:textColor="@color/detail_text_color"
        android:textColorLink="@android:color/holo_blue_light"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvProgramTitle"
        android:layout_toRightOf="@+id/ivProgram"
        android:layout_toEndOf="@+id/ivProgram" />

    <TextView
        android:id="@+id/tvProgramTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/program_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/tvProgramDescription"
        android:layout_alignEnd="@+id/tvProgramDescription"
        android:layout_toEndOf="@+id/ivProgram"
        android:textColor="@color/heading_text_color"
        android:layout_alignTop="@+id/ivProgram"
        android:layout_alignLeft="@+id/tvProgramDescription"
        android:layout_alignStart="@+id/tvProgramDescription" />

</RelativeLayout>


